<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.espertalhao">

    <!-- permissão necessária para o BD-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".VisualizacaoDetalhadaActivity"
            android:label="@string/title_activity_visualizacao_detalhada"
            android:parentActivityName=".VisualizaPerguntasActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.espertalhao.VisualizaPerguntasActivity" />
        </activity>
        <activity
            android:name=".VisualizaPerguntasActivity"
            android:label="@string/title_activity_visualiza_perguntas"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.espertalhao.MainMenuActivity" />
        </activity>
        <activity
            android:name=".CadastroPerguntaActivity"
            android:label="@string/title_activity_cadastro_pergunta"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.espertalhao.MainMenuActivity" />
        </activity>
        <activity
            android:name=".CadastroConteudoActivity"
            android:label="@string/title_activity_cadastro_conteudo"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.espertalhao.MainMenuActivity" />
        </activity>
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>