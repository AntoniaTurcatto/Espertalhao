<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/md_theme_light_secondary"
        app:cardUseCompatPadding="true"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTipoConteudoVisualizaPerguntas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/schoolSubjectCardView"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/imageViewTipoConteudoVisualizaPerguntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/language_symbol"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewConteudoVisualizaPerguntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/schoolSubjectCardView"
                    android:gravity="center"
                    android:textColor="#FFF"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewPerguntaVisualizaPerguntas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/schoolSubjectCardView"
                    android:textColor="#D8D2D2"
                    android:textStyle="italic"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>